<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tsnichols.foodlab.Ingredients_Screen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ingredient_name_txt"
        android:id="@+id/txt_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_ingredient_name"
        android:layout_alignTop="@+id/txt_name"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_toEndOf="@+id/txt_name"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/unit_size_txt"
        android:id="@+id/txt_unit_size"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/spin_ingredient_name"
        android:layout_alignLeft="@+id/txt_name"
        android:layout_alignStart="@+id/txt_name" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_unit_size"
        android:layout_alignTop="@+id/txt_unit_size"
        android:layout_alignLeft="@+id/spin_ingredient_name"
        android:layout_alignStart="@+id/spin_ingredient_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_unit_size"
        android:id="@+id/btn_new_size"
        android:layout_below="@+id/spin_unit_size"
        android:layout_alignLeft="@+id/txt_unit_size"
        android:layout_alignStart="@+id/txt_unit_size"
        android:layout_marginTop="93dp"
        android:onClick="Add_Size_Method" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_ingredient"
        android:id="@+id/btn_new_ingredient"
        android:layout_alignTop="@+id/btn_new_size"
        android:layout_toRightOf="@+id/btn_new_size"
        android:layout_toEndOf="@+id/btn_new_size"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:onClick="Add_Ingredient_Method" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtTest"
        android:layout_below="@+id/spin_unit_size"
        android:layout_alignLeft="@+id/btn_new_size"
        android:layout_alignStart="@+id/btn_new_size"
        android:layout_marginTop="25dp" />

</RelativeLayout>
