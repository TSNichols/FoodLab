<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tsnichols.foodlab.AddIngredient">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxt_add_ingredient_name"
        android:hint="@string/enter_new_ingredient"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/select_unit_size"
        android:id="@+id/txt_add_ingred_dialog"
        android:layout_alignTop="@+id/spin_unit_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spin_unit_size"
        android:entries="@array/unit_size_array"
        android:layout_toRightOf="@+id/txt_add_ingred_dialog"
        android:layout_toEndOf="@+id/txt_add_ingred_dialog"
        android:layout_below="@id/etxt_add_ingredient_name"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_ingred_btn"
        android:id="@+id/btn_dialog_add_ingred"
        android:layout_alignTop="@+id/btn_dialog_cancel_ingred"
        android:layout_toRightOf="@+id/btn_dialog_cancel_ingred"
        android:layout_toEndOf="@+id/btn_dialog_cancel_ingred"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_ingred_cancel"
        android:id="@+id/btn_dialog_cancel_ingred"
        android:layout_below="@+id/spin_unit_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
